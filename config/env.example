# Configuration développement Manalytics
# Plan Expert - Phase 3
# Copiez ce fichier vers .env à la racine du projet

# Environment
ENVIRONMENT=development
DEBUG=true
TESTING=false
VERSION=2.0.0

# Database
DB_REDIS_URL=redis://localhost:6379
DB_REDIS_DB=0
DB_REDIS_MAX_CONNECTIONS=10
DB_SOCKET_TIMEOUT=5.0

# API
API_TITLE=Manalytics API
API_VERSION=2.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000
JWT_SECRET_KEY=dev_secret_key_change_in_production_make_it_long_and_secure
JWT_EXPIRE_MINUTES=60
API_RATE_LIMIT_REQUESTS=1000
API_REQUEST_TIMEOUT=30

# Cache
CACHE_DEFAULT_TTL=3600
CACHE_L1_MAX_MEMORY_MB=100
CACHE_L1_ENABLED=true
CACHE_L2_ENABLED=true
CACHE_COMPRESSION_ENABLED=true
CACHE_PREFETCH_ENABLED=true

# Performance
PERF_MAX_WORKERS=4
PERF_PARALLEL_ENABLED=true
PERF_TARGET_PIPELINE_TIME=1.0
PERF_TARGET_CACHE_HIT_RATE=0.8
PERF_BATCH_SIZE=100
PERF_CHUNK_SIZE=50

# Security
SECURITY_MONITORING_ENABLED=true
SECURITY_FAILED_ATTEMPTS_THRESHOLD=5
SECURITY_BLOCK_DURATION_MINUTES=60
SECURITY_REQUESTS_PER_MINUTE=60
SECURITY_CONTENT_ANALYSIS=true

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_JSON_ENABLED=false
LOG_COLORS_ENABLED=true
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Paths
DATA_DIR=./data
OUTPUT_DIR=./Analyses
LOG_DIR=./logs
MTGO_DATA_PATH=./MTGOFormatData

# MTG
MTG_FORMATS=Standard,Modern,Legacy,Pioneer,Pauper
MTG_MIN_DECK_SIZE=60
MTG_MAX_SIDEBOARD=15
MTG_ARCHETYPE_THRESHOLD=0.7
MTG_MAX_ARCHETYPES_DISPLAY=12
MTG_COLOR_SYSTEM_ENABLED=true
MTG_COLOR_ACCESSIBILITY=true

# Features
FEATURES=advanced_analytics=true,parallel_processing=true,smart_cache=true,security_monitoring=true,structured_logging=true

# Monitoring
MONITORING_ENABLED=true
METRICS_COLLECTION_ENABLED=true 