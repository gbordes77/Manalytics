# ===================================
# Manalytics Environment Configuration
# ===================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Application Settings
APP_NAME=Manalytics
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Security Keys (generate new ones for production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY=your_api_key_here_change_in_production

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://manalytics:changeme@db:5432/manalytics
DB_PASSWORD=changeme

# Redis Cache (optional)
# Used for caching and rate limiting
REDIS_URL=redis://redis:6379

# MTGO Scraping Configuration
MTGO_BASE_URL=https://magic.wizards.com
MTGO_RATE_LIMIT=2

# Melee.gg Scraping Configuration
MELEE_BASE_URL=https://melee.gg
MELEE_EMAIL=your_email@example.com
MELEE_PASSWORD=your_melee_password
MELEE_RATE_LIMIT=5

# Scryfall API Configuration
SCRYFALL_RATE_LIMIT=10

# Feature Toggles
ENABLED_FORMATS=standard,modern,legacy,pioneer,pauper,vintage
ENABLED_SCRAPERS=mtgo,melee

# JWT Authentication Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (for API)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring & Telemetry (optional)
OPENTELEMETRY_ENABLED=false
OPENTELEMETRY_ENDPOINT=http://localhost:4318
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Development Settings
# Only used in development mode
DEV_AUTO_RELOAD=true
DEV_CORS_ALLOW_ALL=false

# Production Settings
# Used in production deployments
PROD_HTTPS_ONLY=true
PROD_RATE_LIMIT_ENABLED=true
PROD_MAX_REQUESTS_PER_MINUTE=100

# Notification Settings (optional)
NOTIFICATIONS_ENABLED=false
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=
EMAIL_USERNAME=
EMAIL_PASSWORD=

# External Services (future features)
TOURNAMENT_API_KEY=
CARDMARKET_API_KEY=
TCGPLAYER_API_KEY=